{
  "name": "@umami/react-zen",
  "version": "0.216.0",
  "description": "Modern, minimalist React component library",
  "homepage": "https://zen.umami.is",
  "repository": {
    "type": "git",
    "url": "https://github.com/umami-software/react-zen.git"
  },
  "license": "MIT",
  "author": "Umami <hello@umami.is>",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "styles.css"
  ],
  "scripts": {
    "dev": "pnpm --filter=react-zen-docs dev",
    "build": "pnpm run bundle && pnpm --filter=react-zen-docs build",
    "start": "pnpm --filter=react-zen-docs start",
    "lint": "biome check ./src",
    "icons": "svgr ./src/assets --out-dir src/components/svg --typescript",
    "esbuild": "node esbuild.mjs",
    "rollup": "rollup -c",
    "css": "node css.mjs",
    "types": "tsup",
    "bundle": "npm-run-all types esbuild css"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@hyrious/esbuild-plugin-commonjs": "^0.2.6",
    "@internationalized/date": "^3.10.0",
    "@react-aria/focus": "^3.21.2",
    "@react-spring/web": "^9.7.5",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@svgr/cli": "^8.1.0",
    "@types/mdx": "^2.0.11",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@umami/esbuild-plugin-css-modules": "0.4.0",
    "autoprefixer": "^10.4.23",
    "dts-bundle": "^0.7.3",
    "esbuild": "^0.27.0",
    "esbuild-css-modules-plugin": "^3.1.5",
    "esbuild-plugin-svgr": "^3.1.1",
    "esbuild-postcss": "^0.0.4",
    "glob": "^13.0.0",
    "highlight.js": "^11.11.1",
    "husky": "^9.1.1",
    "lint-staged": "^16.2.7",
    "lucide-react": "^0.555.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "react-aria-components": "^1.13.0",
    "react-hook-form": "^7.66.1",
    "react-icons": "^5.4.0",
    "rollup": "^4.53.3",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "@tailwindcss/postcss": "^4.1.18",
    "tailwindcss": "^4.1.18",
    "thenby": "^1.3.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "zustand": "^5.0.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  }
}
